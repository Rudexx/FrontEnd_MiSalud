<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.unbosque.AcuerdoUsuario">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkBoxAgree"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvUserAgreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí va el texto del acuerdo de usuario. Puedes reemplazar este texto con el acuerdo completo."
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@android:color/white" />

    </ScrollView>

    <CheckBox
        android:id="@+id/checkBoxAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="He leído y acepto los términos y condiciones"
        android:layout_above="@+id/btnAccept"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
